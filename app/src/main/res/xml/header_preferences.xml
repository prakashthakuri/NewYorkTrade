<androidx.preference.PreferenceScreen xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <PreferenceCategory android:title="General">

    <Preference
        app:fragment="com.cs639.newyorktrade.SettingsActivity$NotificationsFragment"
        app:icon="@drawable/ic_notifications_black_24dp"
        app:key="notifications_header"
        app:title="@string/notifications_header" />

        <Preference
            app:fragment="com.cs639.newyorktrade.SettingsActivity$PasswordFragment"
            app:icon="@drawable/ic_lock_black_24dp"
            app:key="password_header"
            app:title="@string/password_header" />
    </PreferenceCategory>

    <PreferenceCategory android:title="About">
        <Preference
            android:selectable="false"
            android:summary="Created by Prakash Shahi Thakuri at Pace University." />

        <Preference
            android:summary="1.0"
            android:title="Version" />

        <Preference
            android:summary="Have any questions or comments? Let us know!"
            android:title="Send Feedback" />
    </PreferenceCategory>
</androidx.preference.PreferenceScreen>
